{
	"compilerOptions": {
		"target": "ES2020",
		"module": "Node16",
		"moduleResolution": "Node16",
		"strict": true,
		"resolveJsonModule": true,
		"isolatedModules": true,
		"esModuleInterop": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"noImplicitReturns": true,
		"skipLibCheck": true,
		"declaration": true,
		"sourceMap": true,
		"emitDeclarationOnly": true,
		"outDir": "./dist",
		"lib": ["ESNext"],
		"types": ["node"]
	},
	"include": ["src"],
	"exclude": ["**/node_modules/**", "**/*.test.ts", "**/*.bench.ts"]
}
